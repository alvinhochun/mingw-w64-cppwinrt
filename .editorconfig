root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

{*.md}
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{cmd,bat}]
end_of_line = crlf

[Makefile]
indent_style = tab

[{CMakeLists.txt,*.cmake}]
charset = utf-8
indent_style = space
indent_size = 4

[*.yml]
charset = utf-8
indent_style = space
indent_size = 2
